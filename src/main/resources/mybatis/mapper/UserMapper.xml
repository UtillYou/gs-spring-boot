<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.didispace.mapper.UserMapper" >
    <resultMap id="BaseResultMap" type="com.didispace.domain.User" >
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="u_name" property="name" jdbcType="VARCHAR" />
        <result column="age" property="age" jdbcType="INTEGER" />
    </resultMap>

    <sql id="Base_Column_List" >
        id, u_name, age
    </sql>

    <select id="getAll" resultMap="BaseResultMap"  >
        SELECT
        <include refid="Base_Column_List" />
        FROM users
    </select>

    <select id="getUser" parameterType="java.lang.Long" resultMap="BaseResultMap" >
        SELECT
        <include refid="Base_Column_List" />
        FROM users
        WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.didispace.domain.User" >
        INSERT INTO
        users
        (u_name,age)
        VALUES
        (#{name}, #{age})
    </insert>

    <update id="update" parameterType="com.didispace.domain.User" >
        UPDATE
        users
        SET
        <if test="name != null">u_name = #{name},</if>
        <if test="age != null">age = #{age}</if>
        WHERE
        id = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Long" >
        DELETE FROM
        users
        WHERE
        id =#{id}
    </delete>
</mapper>